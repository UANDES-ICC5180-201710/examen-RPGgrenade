<!DOCTYPE html>
<html>

  <head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="navbar-brand navigation-bar" id="nav-content">
      <div class="btn-group navigation">
        <%= link_to 'Home', root_path, :class => 'btn btn-default btn-sm' %>
        <%= link_to 'Games', games_path, :class => 'btn btn-default btn-sm' %>
      </div>
      <% if user_signed_in? %>
          <kbd class="profile-name">Logged in as <strong><%= current_user.email %></strong></kbd>
          <%= link_to "Edit profile", edit_user_registration_path, :class => 'btn btn-default btn-sm' %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-default btn-sm'  %>
      <% else %>
          <div class="btn-group profile">
            <%= link_to "Sign Up", new_user_registration_path, :class => 'btn btn-default btn-sm' %>
            <%= link_to "Login", new_user_session_path, :class => 'btn btn-default btn-sm'  %>
          </div>
      <% end %>
    </div>
    <div class="search-bar">
      <%= form_tag(games_path, :method => "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Documents" %>
          <%= submit_tag "Search", :name => nil, :class => 'btn btn-default btn-sm' %>
      <% end %>
    </div>
<br><br>
    <title>BaseExamen</title>
  </head>

  <body>
  <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    <%= yield %>
  </body>
</html>
